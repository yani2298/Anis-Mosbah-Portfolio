{
  "name": "anis-mosbah-portfolio-app",
  "version": "1.0.0",
  "description": "Application macOS native du portfolio d'Anis Mosbah - Creative Developer",
  "main": "main.js",
  "author": "Anis Mosbah <dev@anismosbah.art>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yani2298/Anis-Mosbah-Portfolio.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --universal",
    "build-mac": "electron-builder --mac --universal",
    "dist": "electron-builder --publish=never",
    "release": "electron-builder --publish=always"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.7.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.anismosbah.portfolio",
    "productName": "Anis Mosbah Portfolio",
    "copyright": "Copyright © 2024 Anis Mosbah",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "app-styles.css",
      "pro-auth.js",
      "icone.png",
      "_astro/**/*",
      "fonts/**/*",
      "icons/**/*",
      "images/**/*"
    ],
    "mac": {
      "target": {
        "target": "default",
        "arch": "universal"
      },
      "icon": "./icone.png",
      "category": "public.app-category.productivity",
      "minimumSystemVersion": "10.14.0",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "bundleVersion": "1.0.0",
      "bundleShortVersion": "1.0.0",
      "extendInfo": {
        "CFBundleDisplayName": "Anis Mosbah Portfolio",
        "CFBundleName": "Anis Mosbah Portfolio",
        "CFBundleExecutable": "Anis Mosbah Portfolio",
        "LSApplicationCategoryType": "public.app-category.productivity",
        "NSHumanReadableCopyright": "Copyright © 2024 Anis Mosbah. Tous droits réservés."
      }
    },
    "publish": {
      "provider": "github",
      "owner": "yani2298",
      "repo": "Anis-Mosbah-Portfolio"
    },
    "compression": "maximum",
    "asar": true
  }
}
